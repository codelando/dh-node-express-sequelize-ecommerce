<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body>
    <%- include('../partials/header') %> 
    <main>
        <div class="container">
            <section>
                <div class="columns">
                    <div class="column is-6">
                        <figure class="image">
                            <img src="https://static1.squarespace.com/static/558619cae4b0013b322618c8/589f5970be6594dd28a8a057/5de6cad21dbe2231b979a1d5/1576696050804/IMG_0307.PNG" alt="">
                        </figure>
                    </div>
                    <div class="column is-6">
                        <h1><%= product.name %></h1>
                        <h2>$ <%= product.price %></h2>
                        <p><%= product.description %></p>
                        <p class="tags">
                            <% product.keywords.forEach((keyword) => { %> 
                                <span class="tag"><%= keyword %> </span>
                            <%}) %>
                        </p>
                        <form action="">
                            <p>Cantidad: <input type="number" value="1"></p>
                            <p><button type="submit">Agregar al carrito</button></p>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>